files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_max_body_size 2M;
      proxy_read_timeout 60;
      proxy_connect_timeout 60;
      proxy_send_timeout 60;

container_commands:
  01_reload_nginx:
    command: "service nginx reload"