# Install Nginx on Amazon Linux instance using yum
packages:
  yum:
    nginx: []

files:
  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Set the maximum allowed body size for uploads (adjust as necessary)
      client_max_body_size 10M;

      # Set the timeout settings for proxying requests
      proxy_read_timeout 120;
      proxy_connect_timeout 120;
      proxy_send_timeout 120;

# Test and reload Nginx configuration
container_commands:
  01_test_nginx_config:
    command: "nginx -t > /var/log/nginx-test.log 2>&1"
    leader_only: true

  02_reload_nginx:
    command: "service nginx reload > /var/log/nginx-reload.log 2>&1"
    leader_only: true
